{
  "api": {
    "binance": {
      "base_url": "https://fapi.binance.com",
      "testnet": false,
      "timeout": 30,
      "max_retries": 3,
      "rate_limit": 1200,
      "weight_limit": 6000,
      "simulation_mode": false,
      "proxy": "http://127.0.0.1:7897"
    },
    "coingecko": {
      "base_url": "https://api.coingecko.com/api/v3",
      "timeout": 30,
      "max_retries": 3,
      "rate_limit": 100,
      "proxy": "http://127.0.0.1:7897"
    }
  },
  "trading": {
    "multi_symbol_mode": true,
    "symbol": "BTCUSDT",
    "interval": "1h",
    "initial_capital": 10000,
    "risk_per_trade": 0.005,
    "max_positions": 3,
    "max_leverage": 20,
    "base_currency": "USDT",
    "intervals": {
      "small": "15m",
      "medium": "1h",
      "large": "4h",
      "daily": "1d"
    },
    "macd": {
      "fast": 12,
      "slow": 26,
      "signal": 9
    },
    "ma_periods": [
      20,
      50,
      120,
      200,
      256
    ],
    "simulation": {
      "enabled": false,
      "starting_balance": 1000,
      "commission_rate": 0.0004,
      "slippage": 0.001
    },
    "risk": {
      "max_position_size": 0.1,
      "max_total_exposure": 0.3,
      "max_drawdown": 0.05,
      "loss_limit": 5,
      "emergency_stop_loss": 0.15,
      "stop_loss_pct": 0.02,
      "take_profit_ratio": 3.0,
      "max_leverage": 10,
      "confidence_threshold": 0.5,
      "dynamic_stop_loss": true,
      "trailing_stop_loss": true,
      "partial_close_profit": 0.03,
      "add_profit_thresh": 0.02,
      "max_add_positions": 3,
      "time_stop_min": [30, 60],
      "funding_thresh": 0.0001,
      "emergency_atr_mult": 2.0
    }
  },
  "coin_selection": {
    "enabled": true,
    "scan_interval_minutes": 30,
    "min_volume_24h": 50000000,
    "min_market_cap": 100000000,
    "max_symbols": 10,
    "excluded_symbols": ["USDCUSDT", "BUSDUSDT", "TUSDUSDT"],
    "volume_filter": {
      "min_24h_volume": 100000000,
      "volume_spike_threshold": 2.0
    },
    "technical_filters": {
      "min_rsi_oversold": 25,
      "max_rsi_overbought": 75,
      "trend_strength_min": 0.3,
      "macd_divergence_required": false
    },
    "risk_filters": {
      "max_volatility": 0.15,
      "min_liquidity_score": 0.6
    }
  },
  "macd_divergence": {
    "lookback_period": 100,
    "min_peak_distance": 5,
    "prominence_threshold": 0.1,
    "confirmation_candles": 3,
    "min_r_squared": 0.7,
    "min_trend_points": 2,
    "min_divergence_strength": 0.3,
    "min_duration_hours": 12,
    "max_duration_hours": 168,
    "dynamic_threshold": true,
    "min_significance": 0.02,
    "continuous_detection": true,
    "consecutive_signals": 2,
    "prominence_mult": 0.5,
    "strength_filter": 0.6
  },
  "signal_generation": {
    "min_confidence": 0.6,
    "max_signals_per_hour": 5,
    "signal_expiry_minutes": 30,
    "duplicate_filter": true,
    "vol_factor_mult": 0.05,
    "market_hours_only": false
  },
  "market_conditions": {
    "volatility_filter": {
      "enabled": true,
      "min_volatility": 0.01,
      "max_volatility": 0.15,
      "calculation_period": 24
    },
    "volume_filter": {
      "enabled": true,
      "min_volume_ratio": 0.5,
      "volume_sma_period": 20
    },
    "trend_filter": {
      "enabled": true,
      "min_trend_strength": 0.3,
      "trend_lookback": 50
    }
  },
  "execution": {
    "order_type": "LIMIT",
    "price_offset": 0.001,
    "max_slippage": 0.005,
    "order_timeout": 300,
    "partial_fill_enabled": true,
    "post_only": false,
    "reduce_only": false
  },
  "system": {
    "resource_monitoring": {
      "enabled": false,
      "cpu_threshold": 80,
      "memory_threshold": 85,
      "disk_threshold": 90,
      "pause_on_high_usage": false,
      "check_interval": 30,
      "alert_threshold": 75
    },
    "backup_data_sources": {
      "enabled": true,
      "fallback_apis": [
        "coingecko",
        "coinmarketcap"
      ],
      "failover_delay": 5,
      "max_retries": 3,
      "retry_delay": 2
    }
  },
  "monitoring": {
    "metrics_interval": 60,
    "alert_thresholds": {
      "cpu_usage": 80,
      "memory_usage": 85,
      "error_rate": 0.05,
      "api_latency": 5.0,
      "consecutive_losses": 3,
      "daily_loss_limit": 0.05
    },
    "telegram_enabled": true,
    "log_level": "INFO"
  }
}